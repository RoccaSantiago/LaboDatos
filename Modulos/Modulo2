def cuantasPorHacer(n):
    res = 0
    with open("cronograma_sugerido.csv", "rt") as file:
        for line in file:
            datos_linea = line.split(",")
            if (datos_linea[0]=="Cuatrimestre"):
                #print("asaaaaa")
                continue
                
            else:
                #print(datos_linea[0])
                if int(datos_linea[0]) == n:
                    res+=1
    return res

#cuantasPorHacer(5)

def materias_cuatrimesstre(nombre, n):
    res = {}
    f = open(nombre)
    filas = csv.reader(f)
    next(filas)
    for fila in filas:
        if fila[0]==n:
            res[fila[1]]=fila[]
)
    
