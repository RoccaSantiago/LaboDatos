#Ejercicio de clase

def geromgosoopt(palabra):
    vocales = ["a","e","i","o","u"]
    res = ""
    for c in palabra:
        res += c
        if c in vocales:
            res += "p" + c
    return res

def geringosolista(lista):
    res = {}
    for c in lista:
        res[c] = geromgosoopt(c)
    return res

#print(geringosolista(["hola","bola", "tartamudo"]))

